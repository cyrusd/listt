!!!
%html
  %head
    %title
      lis.tt
    = stylesheet_link_tag "application", "http://fonts.googleapis.com/css?family=Mrs+Sheppards"
    = javascript_include_tag "application"
    = csrf_meta_tags
  %body{:style => "background: #e1edf0;"}
    .container_16#header
      .grid_16{:style => "text-align: right; margin-top: 2em; color: #787878"}
        - if user_signed_in?
          Signed in as 
          %b
            #{current_user.email}.
          Not you?
          = link_to "Sign out", destroy_user_session_path, :method => :delete
        - else
          Not signed in.
          = link_to "Sign in", new_user_session_path
    .container_16#content{:style => "background: #fafafa; height: 1024px; margin-top: 2.5em; border: 4px solid #94b5c2; -moz-border-radius: 8px; border-radius: 8px; "}
      .grid_16
        #banner{:style => "text-align: right; font-family: 'Mrs Sheppards', serif; font-size: 56px; padding-right: 1em;"}
          Lis.tt
      .grid_16{:style => "border-top: 2px solid #000000;"}
        &nbsp;
      .grid_16
        .grid_4.alpha
        .grid_8
          = yield
        .grid_4.omega
    .container_16#footer{:style => "margin-top: 2.5em;"}
      .grid_16{:style => "margin-bottom: 2em;"}
        .grid_2.alpha
          &nbsp;
        .grid_4{:style => "text-align: center; color: #787878;"}
          ABOUT
        .grid_4{:style => "text-align: center; color: #787878;"}
          POLICIES
        .grid_4{:style => "text-align: center; color: #787878;"}
          CONTACT
        .grid_2.omega
          &nbsp;
